{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": ["es5", "es6", "dom"]
  },
  "exclude": [
    "test/",
    "node_modules/",
    "dist/"
  ]
}